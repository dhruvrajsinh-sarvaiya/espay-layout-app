<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target name="logfile" xsi:type="File" fileName="G:\NEW\GitHub\espay-layout-beta\dotnetapi\LogFiles\LogFile_${shortdate}.txt" />
    <target name="errorfile" xsi:type="File" fileName="G:\NEW\GitHub\espay-layout-beta\dotnetapi\LogFiles\ErrorLog_${shortdate}.txt"/>
     <target name="signalrlogfile" xsi:type="File" fileName="G:\NEW\GitHub\espay-layout-beta\dotnetapi\LogFiles/SignalRFile_${shortdate}.txt"/>
  </targets>
  <rules>
    <logger name="*" minlevel="Error" writeTo="errorfile" />
    <logger name="*" minlevel="Debug" writeTo="logfile" >
      <filters>
        <when condition="(level == LogLevel.Error)" action="Ignore" />
      </filters>
    </logger>
    <logger name="*" minlevel="Trace" writeTo="signalrlogfile" >
      <filters>
        <when condition="(level == LogLevel.Fatal)" action="Ignore" />
        <when condition="(level == LogLevel.Error)" action="Ignore" />
        <when condition="(level == LogLevel.Warn)" action="Ignore" />
        <when condition="(level == LogLevel.Info)" action="Ignore" />
        <when condition="(level == LogLevel.Debug)" action="Ignore" />
      </filters>
    </logger>
  </rules>
</nlog>
